<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteV" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darker_blue</item>
        <item name="colorPrimaryVariant">@color/darker_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_white</item>
        <item name="colorSecondaryVariant">@color/grey_white_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status and Navigation bars color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>